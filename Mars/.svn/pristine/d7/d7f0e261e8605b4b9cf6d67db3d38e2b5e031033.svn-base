#import <IOTCamera/AVIOCTRLDEFs.h>
#import "DeviceBuzzerController.h"

@implementation DeviceBuzzerController

@synthesize camera;
@synthesize labelItems;
@synthesize origValue;
@synthesize newValue;
@synthesize delegate;

- (id)initWithStyle:(UITableViewStyle)style delegate:(id<DeviceBuzzerDelegate>)delegate_ {
    
    self = [super initWithStyle:style];
    
    if (self) {
        
        self.delegate = delegate_;
    }
    
    return self;
}

- (IBAction)back:(id)sender {
    
    if (newValue != -1 && origValue != newValue) {
        
        SMsgAVIoctrlSetDeviceBuzzerReq *structSetBuzzer = malloc(sizeof(SMsgAVIoctrlSetDeviceBuzzerReq));
        memset(structSetBuzzer, 0, sizeof(SMsgAVIoctrlSetDeviceBuzzerReq));
        
        structSetBuzzer->channel = 0;
        structSetBuzzer->isDeviceBuzzer = (int)newValue;
        
        [camera sendIOCtrlToChannel:0 
                               Type:IOTYPE_USER_IPCAM_SET_DEVICEBUZZER_REQ
                               Data:(char *)structSetBuzzer
                           DataSize:sizeof(SMsgAVIoctrlSetDeviceBuzzerReq)];
        
        free(structSetBuzzer);
        
        if (self.delegate) [self.delegate didSetDeviceBuzzer:newValue];
    }
    
    [self.navigationController popViewControllerAnimated:YES];    
}

#pragma mark - View lifecycle

- (void)viewDidLoad {
    
    labelItems = [[NSArray alloc] initWithObjects:NSLocalizedString(@"Off", @""), 
                  NSLocalizedString(@"On", @""), nil];
    
    self.navigationItem.leftBarButtonItem = [[UIBarButtonItem alloc] 
                                             initWithTitle:NSLocalizedString(@"Back", @"") style:UIBarButtonItemStylePlain target:self action:@selector(back:)];
    self.navigationItem.title = NSLocalizedString(@"Device Buzzer", @"");
    
    self.newValue = -1;    

    [super viewDidLoad];
}

- (void)viewDidUnload {
    
    self.delegate = nil;
    self.labelItems = nil;
    self.camera = nil;
    [super viewDidUnload];
}

- (void)viewWillAppear:(BOOL)animated {
    
    self.camera.delegate2 = self;
    [super viewWillAppear:animated];
}

- (void)dealloc {
    
    self.delegate = nil;
    [self.labelItems release];
    [self.camera release];
    [super dealloc];
}

#pragma mark - TableView DataSource Methods
- (NSInteger)numberOfSectionsInTableView:(UITableView *)tableView {
    return 1;
}

- (NSInteger)tableView:(UITableView *)tableView 
 numberOfRowsInSection:(NSInteger)section {
    return (section == 0) ? [self.labelItems count] : 0;
}

- (UITableViewCell *)tableView:(UITableView *)tableView 
         cellForRowAtIndexPath:(NSIndexPath *)indexPath {
   
    NSUInteger row = [indexPath row];
    
    static NSString *DeviceBuzzerTableIdentifier = @"DeviceBuzzerTableIdentifier";
    UITableViewCell *cell = [self.tableView dequeueReusableCellWithIdentifier:DeviceBuzzerTableIdentifier];
    
    if (cell == nil) {
        
        cell = [[[UITableViewCell alloc]
                 initWithStyle:UITableViewCellStyleDefault reuseIdentifier:DeviceBuzzerTableIdentifier]
                autorelease];
    }
    
    cell.textLabel.text = [labelItems objectAtIndex:row]; 
    cell.accessoryType = (row == self.origValue) ? UITableViewCellAccessoryCheckmark : UITableViewCellAccessoryNone;
    
    
    return cell;
}

#pragma mark - TableView Delegate Methods
- (void)tableView:(UITableView *)tableView 
didSelectRowAtIndexPath:(NSIndexPath *)indexPath {
    
    for (UITableViewCell *cell in [self.tableView visibleCells])
        cell.accessoryType = UITableViewCellAccessoryNone;
    
    UITableViewCell *cell = [self.tableView cellForRowAtIndexPath:indexPath];
    cell.accessoryType = UITableViewCellAccessoryCheckmark;
    
    self.newValue = [indexPath row];
    
    [self.tableView deselectRowAtIndexPath:indexPath animated:YES];
}

#pragma mark - MyCameraDelegate Methods
- (void)camera:(MyCamera *)camera_ _didReceiveIOCtrlWithType:(NSInteger)type Data:(const char *)data DataSize:(NSInteger)size {
    
    if (camera_ == camera && type == IOTYPE_USER_IPCAM_GET_DEVICEBUZZER_RESP) {
            
        SMsgAVIoctrlGetDeviceBuzzerReq *s = (SMsgAVIoctrlGetDeviceBuzzerReq*)data;
        memcpy(s, data, size);
        self.origValue = s->isDeviceBuzzer;
        
        [self.tableView reloadData];
    }     
}
@end
